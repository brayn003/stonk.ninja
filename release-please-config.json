{
    "release-type": "simple",
    "group-pull-request-title-pattern": "chore: release v${version}" ,
    "pull-request-header": "## :tada: stonk.ninja changelog",
    "tag-separator": "/",
    "packages": {

      ".": {
        "package-name": "stonk.ninja",
        "release-type": "simple",
        "include-component-in-tag": false
      },
      "server": {
        "package-name": "server",
        "release-type": "python",
        "skip-github-release": true
      },
      "client": {
        "package-name": "client",
        "release-type": "node",
        "skip-github-release": true
      },
      "tick-workers": {
        "package-name": "tick-workers",
        "release-type": "node",
        "skip-github-release": true
      }
    }
  }
  